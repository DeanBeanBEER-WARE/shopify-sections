<div class="hero-banner-section">
  {% if section.settings.background_image %}
    <div class="hero-banner__background">
      <img src="{{ section.settings.background_image }}" alt="{{ section.settings.heading }}">
    </div>
  {% endif %}
  
  <div class="hero-banner__content {{ section.settings.text_alignment }}">
    <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    <div class="hero-banner__description">{{ section.settings.description }}</div>
    {% if section.settings.button_link != blank and section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-banner__button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
.hero-banner-section {
  position: relative;
  min-height: 60vh;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.hero-banner__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-banner__background img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-banner__content {
  position: relative;
  z-index: 2;
  width: 100%;
  padding: 2rem;
  color: #ffffff;
}

.hero-banner__heading {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero-banner__description {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  max-width: 600px;
}

.text-center {
  text-align: center;
}

.text-center .hero-banner__description {
  margin-left: auto;
  margin-right: auto;
}

.hero-banner__button {
  display: inline-block;
  padding: 1rem 2rem;
  background-color: #ffffff;
  color: #000000;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.hero-banner__button:hover {
  background-color: #f0f0f0;
}

@media screen and (max-width: 768px) {
  .hero-banner__heading {
    font-size: 2rem;
  }
  
  .hero-banner__description {
    font-size: 1rem;
  }
}
</style>
