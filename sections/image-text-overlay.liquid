<div class="image-text-overlay-section {{ section.settings.section_height }}">
  {% if section.settings.image %}
    <div class="image-text-overlay__image-container">
      <img src="{{ section.settings.image }}" 
           class="image-text-overlay__image"
           alt="{{ section.settings.heading }}"
           loading="lazy">
    </div>
  {% endif %}
  
  <div class="image-text-overlay__overlay" 
       style="background-color: {{ section.settings.overlay_color }}; 
              opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  
  <div class="image-text-overlay__content {{ section.settings.text_position }}"
       style="color: {{ section.settings.text_color }}; 
              text-align: {{ section.settings.text_alignment }};">
    <h2 class="image-text-overlay__heading">{{ section.settings.heading }}</h2>
    <div class="image-text-overlay__text">{{ section.settings.text }}</div>
    
    {% if section.settings.button_link != blank and section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" 
         class="image-text-overlay__button"
         style="background-color: {{ section.settings.text_color }}; 
                color: {{ section.settings.overlay_color }};">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

<style>
.image-text-overlay-section {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.image-text-overlay-section.small {
  height: 400px;
}

.image-text-overlay-section.medium {
  height: 600px;
}

.image-text-overlay-section.large {
  height: 800px;
}

.image-text-overlay__image-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.image-text-overlay__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-text-overlay__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.image-text-overlay__content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 2rem;
  max-width: 600px;
}

.image-text-overlay__content.left {
  margin-right: 50%;
  align-items: flex-start;
}

.image-text-overlay__content.center {
  margin: 0 auto;
  align-items: center;
}

.image-text-overlay__content.right {
  margin-left: 50%;
  align-items: flex-end;
}

.image-text-overlay__heading {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.image-text-overlay__text {
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 2rem;
}

.image-text-overlay__button {
  display: inline-block;
  padding: 1rem 2rem;
  text-decoration: none;
  border-radius: 4px;
  transition: opacity 0.3s ease;
}

.image-text-overlay__button:hover {
  opacity: 0.9;
}

@media screen and (max-width: 768px) {
  .image-text-overlay__content {
    margin: 0 auto !important;
    text-align: center !important;
    align-items: center !important;
    padding: 1rem;
  }

  .image-text-overlay__heading {
    font-size: 2rem;
  }

  .image-text-overlay__text {
    font-size: 1rem;
  }
  
  .image-text-overlay-section.small,
  .image-text-overlay-section.medium,
  .image-text-overlay-section.large {
    height: 500px;
  }
}
</style>
